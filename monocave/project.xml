	<android target-sdk-version="28" />
	<!-- <meta build-number="1" /> --> <!-- let set the buildnumber manual (android) -->
	
	<app main="Main" path="bin" file="monocave" />
	<!--<define name="stats" if="html5" />-->
	
	<window fps="60" width="800" height="496" vsync="true" resizable="true" hardware="true" allow-shaders="true" require-shaders="true" depth-buffer="true" stencil-buffer="false" />
